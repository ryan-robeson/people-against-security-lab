<%= page_header "Manage" %>
<div class="row">
  <div class="col-xs-12">
    <h2>Status</h2>
    <div class="row">
      <div class="col-xs-2 col-xs-offset-1">
        <div class="text-center panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Total Users:</h3>
          </div>
          <div class="panel-body">
            <p>
            <span class="badge">
              <%= @total_users %>
            </span>
            </p>
          </div>
        </div>
      </div>
      <div class="col-xs-2 col-xs-offset-2">
        <div class="text-center panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Uptime</h3>
          </div>
          <div class="panel-body">
            <p><span class="badge">2 years</span></p>
          </div>
        </div>
      </div>
      <div class="col-xs-2 col-xs-offset-2">
        <div class="text-center panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Banned Users</h3>
          </div>
          <div class="panel-body">
            <p><span class="badge"><%= @total_banned %></span></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-xs-4 col-xs-offset-4">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Manage</h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="text-center col-xs-10 col-xs-offset-1">
            <div class="btn-group btn-group-lg">
              <a class="btn btn-default" href="/admin/manage/users">Users</a>
              <a class="btn btn-default" href="/admin/manage/backup_database">Backup Database</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
